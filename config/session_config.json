{
  "version": "2.1",
  "description": "AI交易系统会话配置 - 向后兼容版本",
  "last_updated": "2024-01-20",
  
  "sessions": {
    "main_session": {
      "type": "primary",
      "description": "主会话 - 完整功能访问",
      "timeout": 3600,
      "max_concurrent_tools": 10,
      "allowed_tool_categories": ["simple_tools", "complex_tools", "system_tools"],
      "permissions": {
        "data_access": true,
        "trading_access": true,
        "system_access": true,
        "mcp_access": true
      },
      "resource_limits": {
        "max_memory_mb": 1024,
        "max_execution_time_seconds": 300,
        "max_api_calls_per_minute": 100
      },
      "features": {
        "caching_enabled": true,
        "logging_enabled": true,
        "error_recovery": true,
        "recursive_calls": true,
        "sequential_thinking": true
      }
    },
    "sub_session": {
      "type": "secondary",
      "description": "子会话 - 受限功能访问",
      "timeout": 1800,
      "max_concurrent_tools": 5,
      "allowed_tool_categories": ["simple_tools"],
      "permissions": {
        "data_access": true,
        "trading_access": false,
        "system_access": false,
        "mcp_access": false
      },
      "resource_limits": {
        "max_memory_mb": 512,
        "max_execution_time_seconds": 120,
        "max_api_calls_per_minute": 50
      },
      "features": {
        "caching_enabled": true,
        "logging_enabled": true,
        "error_recovery": false,
        "recursive_calls": false,
        "sequential_thinking": false
      }
    },
    "thinking_session": {
      "type": "specialized",
      "description": "思考会话 - 专用于Sequential Thinking",
      "timeout": 7200,
      "max_concurrent_tools": 3,
      "allowed_tool_categories": ["system_tools"],
      "permissions": {
        "data_access": false,
        "trading_access": false,
        "system_access": true,
        "mcp_access": true
      },
      "resource_limits": {
        "max_memory_mb": 256,
        "max_execution_time_seconds": 600,
        "max_api_calls_per_minute": 20
      },
      "features": {
        "caching_enabled": false,
        "logging_enabled": true,
        "error_recovery": true,
        "recursive_calls": true,
        "sequential_thinking": true
      }
    }
  },
  
  "session_management": {
    "default_session": "main_session",
    "auto_cleanup": true,
    "cleanup_interval_minutes": 30,
    "max_idle_time_minutes": 60,
    "session_persistence": {
      "enabled": true,
      "storage_type": "memory",
      "backup_enabled": false
    }
  },
  
  "compatibility": {
    "legacy_session_types": {
      "main": "main_session",
      "sub": "sub_session",
      "thinking": "thinking_session"
    },
    "migration_rules": {
      "v2.0_to_v2.1": {
        "session_timeout": "preserve",
        "tool_permissions": "upgrade",
        "new_features": "enable_default"
      }
    },
    "deprecated_features": [
      "sync_only_mode",
      "legacy_error_handling"
    ]
  },
  
  "monitoring": {
    "performance_tracking": true,
    "resource_monitoring": true,
    "error_tracking": true,
    "metrics_collection": {
      "session_duration": true,
      "tool_usage": true,
      "error_rates": true,
      "resource_usage": true
    }
  },
  
  "security": {
    "session_isolation": true,
    "permission_validation": true,
    "resource_sandboxing": true,
    "audit_logging": true
  },
  
  "context_management": {
    "context_retention": true,
    "max_context_size": 10000,
    "context_cleanup_enabled": true
  }
}